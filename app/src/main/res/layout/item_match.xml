<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_background_3"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/opponents_one_flag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/opponents_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/opponents_one_flag"
        android:text="TEAM 1"
        android:textColor="#ffffff"
        />

    <ImageView
        android:id="@+id/opponents_two_flag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@+id/opponents_one"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/match_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MatchId"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/match_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:alpha="0.6"
        android:layout_margin="5dp"
        android:text="date"/>

    <ImageView
        android:id="@+id/video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/opponents_two_flag"
        android:layout_alignEnd="@+id/match_date"
        android:visibility="gone"
        app:srcCompat="@android:drawable/presence_video_online"/>

    <TextView
        android:id="@+id/opponents_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM 2"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/opponents_one"
        android:layout_below="@+id/opponents_one"
        />


</RelativeLayout>