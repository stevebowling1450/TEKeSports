<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tourn_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:background="#222"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tourn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tourn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/location_flag"
        android:background="@drawable/background_shadow"
        android:layout_marginEnd="5dp"
        android:text="date"
        android:textColor="#ffffff"
        android:alpha=".6"
        />

    <TextView
        android:id="@+id/tourn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tourn_id"
        android:layout_margin="5dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/background_shadow"
        android:text="Tournament 1"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/location_flag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tourn_name"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/colorBlue"/>

    <Button
        android:id="@+id/details_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/tourn_date"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/about"
        android:scaleY="1.7"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shadow"
        android:text="Location"
        android:textColor="#ffffff"
        android:alpha=".6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/location_flag"
        android:layout_toEndOf="@+id/location_flag" />

</RelativeLayout>