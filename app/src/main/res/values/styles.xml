<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textStyle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!--<style name="AppTheme.NoActionBar">-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="CustomStyleTweet">
        <item name="tw__container_bg_color">@color/colorBackgroundMediumGrey</item>
        <item name="tw__primary_text_color">@color/tw__tweet_dark_primary_text_color</item>
        <item name="tw__action_color">@color/tw__tweet_action_color</item>
        <item name="tw__action_highlight_color">@color/tw__tweet_action_dark_highlight_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarPushContent" parent="Theme.AppCompat.DayNight.DarkActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavigationViewStyle">
        <item name="android:textSize">23sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- menu item height-->
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
